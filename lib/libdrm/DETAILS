          MODULE=libdrm
         VERSION=2.4.102
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=https://dri.freedesktop.org/libdrm/
      SOURCE_VFY=sha256:8bcbf9336c28e393d76c1f16d7e79e394a7fce8a2e929d52d3ad7ad8525ba05b
